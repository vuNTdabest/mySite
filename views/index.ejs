    <section class="section-enroll">
        <div class="row">
            <div class="enroll">
                <div class="enroll__form">
                    <form class="form" action="/comment" method="POST">
                        <div>
                            <h2 class="heading-secondary">
                                feedback
                            </h2>
                        </div>
                        <div class="form__group">
                            <label for="email" class="form__label">Email</label>
                            <% if(user!=undefined) {%>
                                <input id="email" type="text" name="email" class="form__input" value="<%=user.email%>"
                                    readonly>
                                <% } else { %>
                                    <input id="email" type="text" name="email" class="form__input" placeholder="email"
                                        disabled>
                                    <% } %>

                        </div>
                        <div class="form__group">
                            <label for="comment" class="form__label">Comment</label>
                            <textarea id="comment" type="text" name="comment" style="height: 15rem; resize: none;"
                                placeholder="Leave a comment" class="form__input" required></textarea>
                        </div>
                        <div class="form__group">
                            <% if(user!=undefined) {%>
                                <!-- <button class="btn btn-danger" type="submit">
                                    Comment
                                </button> -->
                                <button type="submit" class="button-green">
                                    Comment
                                </button>
                                <% } else { %>
                                    <span style="color: #d93025;">Please log in to comment &nbsp;</span>
                                    <a href="/login" class="btn-text"> Log in </a>
                                    <% } %>

                        </div>
                    </form>
                </div>
                <div class="enroll__comment">
                    <div class="form">
                        <% comments.forEach((cmt)=> { %>
                            <span class="enroll__comment--author">
                                <%=cmt.author%>
                            </span>
                            <br>
                            <p style="color: #fff;">
                                <%=cmt.comment%>
                            </p>
                            <br>
                            <%})%>

                    </div>
                </div>
            </div>
        </div>

